#include <stdio.h>
#include<stdlib.h>
#define SIZE 5

int stack[SIZE],top=-1;

void push(int value)
{
    if (top==SIZE-1)
    {
        printf("overflow");
    }
    else
    {
        printf("enter the value to the stack : ");
        scanf("%d",&value);
        top++;
        stack[top]=value;
    }
}

void pop()
{
    if (top==-1)
    {
        printf("underflow");
    }
    else
    {
        printf("the deleted value is %d \n",stack[top]);
        top--;
    }
}

void display()
{
    if(top==-1)
    {
        printf("their is no values in the stack");

    }
    else
    {
        printf("the the values in the stack are :");
        for (int i=0;i<=top;i++)
        {
           printf("%d \t",stack[i]);
        }
    }
}

int main()
{
    int choice;
    int value;
    while(1)
    {
        printf("\n===menu===\n");
        printf("1.push\n");
        printf("2.pop\n");
        printf("3.display\n");
        printf("\nenter the choice : ");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1: push(value);
            break;
            case 2:pop();
            break;
            case 3:display();
            break;
            case 4: exit(0);
            default:printf("invalid input");
        }
    }
}
